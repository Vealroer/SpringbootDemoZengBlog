<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.sinap.zengblog.dao.TagDao">
    <resultMap id="tagMap" type="cn.sinap.zengblog.domain.Tag">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="cn.sinap.zengblog.domain.Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
        </collection>
    </resultMap>

    <insert id="saveTag" parameterType="cn.sinap.zengblog.domain.Tag">
        insert into t_tag(id,name) values(#{id},#{name})
    </insert>

    <select id="getTag" resultType="cn.sinap.zengblog.domain.Tag">
        select * from t_tag where id = #{id}
    </select>

    <select id="getTagByName" resultType="cn.sinap.zengblog.domain.Tag">
        select * from t_tag where name = #{name}
    </select>

    <select id="getAllTag" resultType="cn.sinap.zengblog.domain.Tag">
        select * from t_tag
    </select>

    <update id="updateTag" parameterType="cn.sinap.zengblog.domain.Tag">
        update t_tag set name = #{name} where id = #{id}
    </update>

    <delete id="deleteTag" >
        delete from t_tag where id = #{id}
    </delete>

    <select id="getBlogTag" resultMap="tagMap">
        select t.id tid, t.name, b.id bid, b.title
        from t_tag t, t_blog b, t_blog_tags bt
        where t.id = bt.tag_id and b.id = bt.blog_id
    </select>
</mapper>